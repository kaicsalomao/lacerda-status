<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_height="150dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="9dp"
    app:cardCornerRadius="13dp"
    android:layout_marginLeft="13dp"
    android:id="@+id/itemCardView">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cardImageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/cardTextViewMini"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cardImageView"
            app:layout_constraintStart_toStartOf="@id/cardImageView"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/cardTextViewMain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cardTextViewMini"
            app:layout_constraintStart_toStartOf="@id/cardTextViewMini"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="17sp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
